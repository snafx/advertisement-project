<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1" id="data-fabric-web-tool">

    <display-name>AdvertisementProject</display-name>

    <servlet>
        <servlet-name>addNewServlet</servlet-name>
        <servlet-class>ogloszenia.AddNewAdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addNewServlet</servlet-name>
        <url-pattern>/ad-new-ad</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registerUserServlet</servlet-name>
        <servlet-class>ogloszenia.RegisterUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registerUserServlet</servlet-name>
        <url-pattern>/reg-new-user</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>AddNewConversationServlet</display-name>
        <servlet-name>AddNewConversationServlet</servlet-name>
        <servlet-class>ogloszenia.AddNewConversationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddNewConversationServlet</servlet-name>
        <url-pattern>/add-new-conv</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>AddNewConversationMessageServlet</display-name>
        <servlet-name>AddNewConversationMessageServlet</servlet-name>
        <servlet-class>ogloszenia.AddNewConversationMessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddNewConversationMessageServlet</servlet-name>
        <url-pattern>/send-message</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>LoginServlet</display-name>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ogloszenia.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>LogoutServlet</display-name>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>ogloszenia.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>SearchServlet</display-name>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>ogloszenia.SearchAdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

</web-app>